@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // ── Character counters ─────────────────────────────────────────────
        function setupCounter(inputId, counterId, max) {
            const input   = document.getElementById(inputId);
            const counter = document.getElementById(counterId);
            if (!input || !counter) return;

            function update() {
                const len = input.value.length;
                counter.textContent = len + ' / ' + max;
                counter.className = 'char-counter';
                if (len > max * 0.9) counter.classList.add('warn');
                if (len >= max)      counter.classList.add('limit');
            }

            input.addEventListener('input', update);
            update();
        }

        setupCounter('Title',       'titleCounter', 100);
        setupCounter('Description', 'descCounter',  500);

        // ── Number stepper ─────────────────────────────────────────────────
        function stepValue(id, delta, min, max) {
            const input = document.getElementById(id);
            let val = parseInt(input.value) || 0;
            val = Math.min(max, Math.max(min, val + delta));
            input.value = val;
            updateProgress();
        }

        // ── Image preview ──────────────────────────────────────────────────
        const coverInput   = document.getElementById('CoverImageUrl');
        const previewBox   = document.getElementById('imagePreviewBox');
        const previewImg   = document.getElementById('imagePreview');

        let previewTimeout;

        coverInput.addEventListener('input', () => {
            clearTimeout(previewTimeout);
            previewTimeout = setTimeout(() => {
                const url = coverInput.value.trim();
                if (!url) {
                    previewBox.classList.remove('has-image');
                    previewImg.classList.remove('loaded');
                    return;
                }
                previewImg.onload = () => {
                    previewBox.classList.add('has-image');
                    previewImg.classList.add('loaded');
                };
                previewImg.onerror = () => {
                    previewBox.classList.remove('has-image');
                    previewImg.classList.remove('loaded');
                };
                previewImg.src = url;
            }, 600);
        });

        // ── Status label ───────────────────────────────────────────────────
        function updateStatusLabel(cb) {
            const title   = document.getElementById('statusLabelTitle');
            const sub     = document.getElementById('statusLabelSub');
            const icon    = document.getElementById('statusIconInner');

            if (cb.checked) {
                title.textContent = 'Aktif';
                sub.textContent   = 'Tur listede görünecek';
                icon.className    = 'bi bi-eye-fill';
            } else {
                title.textContent = 'Pasif';
                sub.textContent   = 'Tur listede görünmeyecek';
                icon.className    = 'bi bi-eye-slash-fill';
            }
        }

        // ── Form progress ──────────────────────────────────────────────────
        const progressBar   = document.getElementById('formProgressBar');
        const progressPct   = document.getElementById('progressPercent');

        const trackedFields = [
            'Title', 'Description', 'CoverImageUrl', 'Price'
        ];

        function updateProgress() {
            let filled = 0;
            const total = trackedFields.length + 2; // +DayCount +Capacity (always have value)

            trackedFields.forEach(id => {
                const el = document.getElementById(id);
                if (el && el.value.trim().length > 0) filled++;
            });

            // DayCount and Capacity always count as filled since they have default values
            const dayCount = parseInt(document.getElementById('DayCount').value) || 0;
            const capacity = parseInt(document.getElementById('Capacity').value) || 0;
            if (dayCount >= 1) filled++;
            if (capacity >= 1) filled++;

            const pct = Math.round((filled / total) * 100);
            progressBar.style.width = pct + '%';
            progressPct.textContent = pct + '%';
        }

        trackedFields.forEach(id => {
            const el = document.getElementById(id);
            if (el) el.addEventListener('input', updateProgress);
        });

        document.getElementById('DayCount').addEventListener('input', updateProgress);
        document.getElementById('Capacity').addEventListener('input', updateProgress);

        updateProgress();

        // ── Client-side validation highlight ──────────────────────────────
        document.getElementById('createTourForm').addEventListener('submit', function (e) {
            let valid = true;

            trackedFields.forEach(id => {
                const el = document.getElementById(id);
                if (el && !el.value.trim()) {
                    el.classList.add('is-invalid');
                    valid = false;
                } else if (el) {
                    el.classList.remove('is-invalid');
                }
            });

            const price = parseFloat(document.getElementById('Price').value);
            const priceEl = document.getElementById('Price');
            if (isNaN(price) || price <= 0) {
                priceEl.classList.add('is-invalid');
                valid = false;
            }

            if (!valid) {
                e.preventDefault();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            } else {
                const btn = document.getElementById('submitBtn');
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status"></span>Kaydediliyor…';
            }
        });

        // Remove invalid class on input
        document.querySelectorAll('.form-control-custom').forEach(el => {
            el.addEventListener('input', () => el.classList.remove('is-invalid'));
        });
    </script>
}




