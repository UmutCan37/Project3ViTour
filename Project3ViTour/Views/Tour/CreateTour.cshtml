@model CreateTourDto

@{
    
    Layout = null;
}


    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        :root {
            --brand: #1a3c5e;
            --brand-light: #eef3f8;
            --accent: #e8a045;
            --accent-pale: #fdf3e3;
            --success: #198754;
            --radius: 14px;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #f0f4f8;
            color: #1e2d3d;
        }

        /* ── TOPBAR ── */
        .page-topbar {
            background: #fff;
            border-bottom: 1px solid #e4ecf4;
            padding: 18px 32px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 90;
            box-shadow: 0 1px 8px rgba(26,60,94,.06);
        }

        .page-topbar-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--brand);
        }

        .breadcrumb-bar {
            font-size: .78rem;
            color: #8fa3ba;
            margin-top: 2px;
        }

            .breadcrumb-bar a {
                color: var(--brand);
                font-weight: 600;
                text-decoration: none;
            }

                .breadcrumb-bar a:hover {
                    text-decoration: underline;
                }

        /* ── CONTENT ── */
        .page-content {
            padding: 32px;
            max-width: 1280px;
            margin: 0 auto;
        }

        /* ── STEP INDICATOR ── */
        .step-indicator {
            display: flex;
            background: #fff;
            border-radius: var(--radius);
            border: 1px solid #e4ecf4;
            overflow: hidden;
            margin-bottom: 28px;
            box-shadow: 0 2px 8px rgba(26,60,94,.05);
        }

        .step-item {
            flex: 1;
            padding: 14px 16px;
            display: flex;
            align-items: center;
            gap: 10px;
            border-right: 1px solid #e4ecf4;
            position: relative;
        }

            .step-item:last-child {
                border-right: none;
            }

        .step-num {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: .78rem;
            font-weight: 700;
            flex-shrink: 0;
            background: #e4ecf4;
            color: #8fa3ba;
        }

        .step-item.active .step-num {
            background: var(--brand);
            color: #fff;
        }

        .step-item.active::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--brand);
        }

        .step-text {
            font-size: .8rem;
            font-weight: 600;
            color: #8fa3ba;
        }

        .step-item.active .step-text {
            color: var(--brand);
        }

        /* ── CARD PANEL ── */
        .card-panel {
            background: #fff;
            border-radius: var(--radius);
            border: 1px solid #e4ecf4;
            overflow: hidden;
            margin-bottom: 20px;
            box-shadow: 0 2px 12px rgba(26,60,94,.06);
        }

        .card-panel-header {
            padding: 18px 24px;
            border-bottom: 1px solid #f0f4f8;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .card-panel-icon {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            background: var(--brand-light);
            color: var(--brand);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        .card-panel-title {
            font-weight: 700;
            font-size: .95rem;
            color: var(--brand);
        }

        .card-panel-sub {
            font-size: .78rem;
            color: #8fa3ba;
            margin-top: 1px;
        }

        .card-panel-body {
            padding: 24px;
        }

        /* ── FORM ── */
        .form-label {
            font-size: .8rem;
            font-weight: 600;
            color: #475f74;
            margin-bottom: 6px;
            letter-spacing: .2px;
        }

            .form-label .req {
                color: #e05c5c;
                margin-left: 2px;
            }

        .form-control, .form-select {
            border: 1.5px solid #dce8f0;
            border-radius: 10px;
            padding: 10px 14px;
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: .88rem;
            color: #1e2d3d;
            background: #fbfcfe;
            transition: border-color .2s, box-shadow .2s;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--brand);
                box-shadow: 0 0 0 3px rgba(26,60,94,.1);
                background: #fff;
                outline: none;
            }

            .form-control.input-validation-error,
            .form-control:invalid:not(:placeholder-shown) {
                border-color: #e05c5c;
            }

        textarea.form-control {
            resize: vertical;
            min-height: 120px;
        }

        .form-control::placeholder {
            color: #b0c2d0;
        }

        .text-danger {
            font-size: .75rem;
            margin-top: 4px;
        }

        /* input with leading icon */
        .input-icon-wrap {
            position: relative;
        }

            .input-icon-wrap .form-control {
                padding-left: 40px;
            }

            .input-icon-wrap .input-icon {
                position: absolute;
                left: 13px;
                top: 50%;
                transform: translateY(-50%);
                color: #9fb5c8;
                font-size: 1rem;
                pointer-events: none;
            }

        /* ── SPINNER ── */
        .spinner-group {
            display: flex;
            align-items: center;
            border: 1.5px solid #dce8f0;
            border-radius: 10px;
            overflow: hidden;
            background: #fbfcfe;
        }

            .spinner-group:focus-within {
                border-color: var(--brand);
                box-shadow: 0 0 0 3px rgba(26,60,94,.1);
            }

        .spinner-btn {
            width: 44px;
            height: 44px;
            border: none;
            background: var(--brand-light);
            color: var(--brand);
            font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            transition: background .15s;
            user-select: none;
        }

            .spinner-btn:hover {
                background: #d6e5f3;
            }

        .spinner-input {
            flex: 1;
            border: none;
            text-align: center;
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: .95rem;
            font-weight: 600;
            color: var(--brand);
            background: transparent;
            outline: none;
            padding: 0;
        }
            /* hide browser arrows */
            .spinner-input::-webkit-outer-spin-button,
            .spinner-input::-webkit-inner-spin-button {
                -webkit-appearance: none;
            }

            .spinner-input[type=number] {
                -moz-appearance: textfield;
            }

        /* ── PRICE ── */
        .price-wrap {
            position: relative;
        }

        .price-currency {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: 700;
            color: var(--brand);
            font-size: .95rem;
            pointer-events: none;
        }

        .price-wrap .form-control {
            padding-left: 30px;
            font-weight: 600;
            font-size: .95rem;
        }

        /* ── IMAGE UPLOAD ── */
        .upload-zone {
            border: 2px dashed #c8d9e9;
            border-radius: 12px;
            padding: 28px 20px;
            text-align: center;
            cursor: pointer;
            transition: border-color .2s, background .2s;
            background: #f8fbfe;
            position: relative;
        }

            .upload-zone:hover {
                border-color: var(--brand);
                background: var(--brand-light);
            }

            .upload-zone input[type=file] {
                position: absolute;
                inset: 0;
                opacity: 0;
                cursor: pointer;
            }

        .upload-icon {
            width: 52px;
            height: 52px;
            border-radius: 14px;
            background: var(--brand-light);
            color: var(--brand);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            margin: 0 auto 10px;
        }

        .upload-zone p {
            font-size: .82rem;
            color: #8fa3ba;
            margin: 0;
        }

        .upload-zone strong {
            display: block;
            font-size: .88rem;
            color: var(--brand);
            margin-bottom: 3px;
        }

        #urlPreview {
            display: none;
            margin-top: 14px;
            border-radius: 10px;
            overflow: hidden;
            border: 1.5px solid #dce8f0;
            position: relative;
        }

            #urlPreview img {
                width: 100%;
                max-height: 200px;
                object-fit: cover;
                display: block;
            }

        #removeImgBtn {
            position: absolute;
            top: 8px;
            right: 8px;
            background: rgba(0,0,0,.55);
            border: none;
            color: #fff;
            border-radius: 6px;
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: .85rem;
        }

        /* ── BADGE CHIPS ── */
        .badge-options {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .badge-chip {
            padding: 6px 16px;
            border-radius: 20px;
            font-size: .8rem;
            font-weight: 600;
            border: 1.5px solid #dce8f0;
            cursor: pointer;
            background: #f8fbfe;
            color: #475f74;
            transition: all .18s;
            user-select: none;
        }

            .badge-chip:hover {
                border-color: var(--brand);
                color: var(--brand);
            }

            .badge-chip.sel-default.selected {
                background: var(--brand);
                border-color: var(--brand);
                color: #fff;
            }

            .badge-chip.sel-accent.selected {
                background: var(--accent);
                border-color: var(--accent);
                color: #fff;
            }

            .badge-chip.sel-green.selected {
                background: var(--success);
                border-color: var(--success);
                color: #fff;
            }

            .badge-chip.sel-dark.selected {
                background: #374151;
                border-color: #374151;
                color: #fff;
            }

            .badge-chip.sel-red.selected {
                background: #dc2626;
                border-color: #dc2626;
                color: #fff;
            }

            .badge-chip.sel-none.selected {
                background: #6b7280;
                border-color: #6b7280;
                color: #fff;
            }

        /* ── STATUS TOGGLE ── */
        .toggle-wrap {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px 20px;
            border-radius: 12px;
            border: 1.5px solid #dce8f0;
            background: #fbfcfe;
        }

        .toggle-label {
            font-size: .88rem;
            font-weight: 600;
            color: #475f74;
        }

        .toggle-sub {
            font-size: .75rem;
            color: #9fb5c8;
            margin-top: 2px;
        }

        .form-switch .form-check-input {
            width: 48px;
            height: 26px;
            cursor: pointer;
            background-color: #c8d9e9;
        }

            .form-switch .form-check-input:checked {
                background-color: var(--success);
                border-color: var(--success);
            }

            .form-switch .form-check-input:focus {
                box-shadow: none;
            }

        /* ── SUMMARY ── */
        .summary-card {
            background: linear-gradient(135deg, var(--brand) 0%, #0f2540 100%);
            border-radius: var(--radius);
            color: #fff;
            padding: 24px;
            margin-bottom: 20px;
            position: sticky;
            top: 76px;
        }

            .summary-card h6 {
                font-size: .72rem;
                letter-spacing: 1px;
                text-transform: uppercase;
                color: rgba(255,255,255,.45);
                margin-bottom: 16px;
            }

        .sum-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 9px;
        }

            .sum-row .lbl {
                font-size: .8rem;
                color: rgba(255,255,255,.55);
            }

            .sum-row .val {
                font-size: .85rem;
                font-weight: 600;
                color: #fff;
                max-width: 55%;
                text-align: right;
                word-break: break-word;
            }

        .sum-divider {
            border-top: 1px solid rgba(255,255,255,.12);
            margin: 14px 0;
        }

        .sum-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--accent);
        }

        .preview-img-wrap {
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 16px;
            height: 120px;
            background: rgba(255,255,255,.08);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .preview-img-wrap img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .preview-img-wrap span {
                color: rgba(255,255,255,.3);
                font-size: .8rem;
                text-align: center;
            }

        /* ── FIELD CHECKS ── */
        .field-check-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: .82rem;
            padding: 3px 0;
        }

            .field-check-item.ok {
                color: var(--success);
            }

            .field-check-item.nok {
                color: #8fa3ba;
            }

        /* ── BUTTONS ── */
        .btn-brand {
            background: var(--brand);
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 12px 28px;
            font-family: 'Plus Jakarta Sans',sans-serif;
            font-weight: 700;
            font-size: .9rem;
            cursor: pointer;
            transition: background .18s, transform .12s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-brand:hover {
                background: #152f4a;
                transform: translateY(-1px);
            }

            .btn-brand:disabled {
                opacity: .6;
                cursor: not-allowed;
                transform: none;
            }

        .btn-accent {
            background: var(--accent);
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 12px 28px;
            font-family: 'Plus Jakarta Sans',sans-serif;
            font-weight: 700;
            font-size: .9rem;
            cursor: pointer;
            transition: background .18s, transform .12s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-accent:hover {
                background: #cf8d30;
                transform: translateY(-1px);
            }

        .btn-outline {
            background: transparent;
            color: var(--brand);
            border: 1.5px solid #c8d9e9;
            border-radius: 10px;
            padding: 11px 20px;
            font-family: 'Plus Jakarta Sans',sans-serif;
            font-weight: 600;
            font-size: .88rem;
            cursor: pointer;
            transition: all .18s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-outline:hover {
                background: var(--brand-light);
                border-color: var(--brand);
            }

        /* ── CHAR COUNTER ── */
        .char-counter {
            font-size: .72rem;
            color: #b0c2d0;
            text-align: right;
            margin-top: 4px;
        }

        .form-hint {
            font-size: .75rem;
            color: #9fb5c8;
            margin-top: 5px;
        }

        /* ── LOADING OVERLAY ── */
        #loadingOverlay {
            display: none;
            position: fixed;
            inset: 0;
            z-index: 9999;
            background: rgba(15,37,64,.65);
            backdrop-filter: blur(4px);
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 16px;
        }

        .spinner-ring {
            width: 52px;
            height: 52px;
            border-radius: 50%;
            border: 4px solid rgba(255,255,255,.15);
            border-top-color: var(--accent);
            animation: spin .8s linear infinite;
        }
        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }

        #loadingOverlay p {
            color: #fff;
            font-weight: 600;
            font-size: .95rem;
        }

        @@media (max-width:768px) {
            .page-content

        {
            padding: 16px;
        }

        .step-text {
            display: none;
        }

        }
    </style>


<!-- ── LOADING OVERLAY ── -->
<div id="loadingOverlay">
    <div class="spinner-ring"></div>
    <p>Tur oluşturuluyor...</p>
</div>

<!-- ── TOP BAR ── -->
<div class="page-topbar">
    <div>
        <div class="page-topbar-title">Yeni Tur Oluştur</div>
        <div class="breadcrumb-bar">
            <a asp-action="TourList">Tur Listesi</a> › Yeni Tur
        </div>
    </div>
    <div class="d-flex gap-2 align-items-center">
        <a asp-action="TourList" class="btn-outline">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>
</div>

<!-- ── PAGE CONTENT ── -->
<div class="page-content">

    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger d-flex align-items-center gap-2 mb-4 rounded-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-5"></i>
            <div>
                <strong>Formu tamamlayın:</strong>
                <asp-validation-summary asp-validation-summary="All" class="mb-0 mt-1" />
            </div>
        </div>
    }

    <!-- Step Indicator -->
    <div class="step-indicator">
        <div class="step-item active">
            <div class="step-num">1</div>
            <div class="step-text">Temel Bilgiler</div>
        </div>
        <div class="step-item active">
            <div class="step-num">2</div>
            <div class="step-text">Detay & Fiyat</div>
        </div>
        <div class="step-item active">
            <div class="step-num">3</div>
            <div class="step-text">Medya & Rozet</div>
        </div>
        <div class="step-item active">
            <div class="step-num">4</div>
            <div class="step-text">Yayın</div>
        </div>
    </div>

    <form asp-action="CreateTour" asp-controller="Tour"
          method="post" id="createTourForm" novalidate>
        @Html.AntiForgeryToken()

        <div class="row g-4">

            <!-- ══ LEFT ══ -->
            <div class="col-xl-8 col-lg-7">

                <!-- 1. Temel Bilgiler -->
                <div class="card-panel">
                    <div class="card-panel-header">
                        <div class="card-panel-icon"><i class="bi bi-pencil-square"></i></div>
                        <div>
                            <div class="card-panel-title">Temel Bilgiler</div>
                            <div class="card-panel-sub">Tur başlığı ve açıklamasını girin</div>
                        </div>
                    </div>
                    <div class="card-panel-body">

                        <!-- Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label">
                                Tur Başlığı <span class="req">*</span>
                            </label>
                            <div class="input-icon-wrap">
                                <i class="bi bi-type-h1 input-icon"></i>
                                <input asp-for="Title"
                                       class="form-control"
                                       placeholder="Örn: 5 Gün 4 Gece Kapadokya & Göreme Turu"
                                       maxlength="120"
                                       oninput="onTitleInput(this)" />
                            </div>
                            <div class="d-flex justify-content-between">
                                <span asp-validation-for="Title" class="text-danger"></span>
                                <span class="char-counter"><span id="titleCount">0</span>/120</span>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-0">
                            <label asp-for="Description" class="form-label">
                                Tur Açıklaması <span class="req">*</span>
                            </label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="6"
                                      placeholder="Tur rotası, konaklama, ulaşım ve dahil olan aktiviteler hakkında detaylı bilgi verin..."
                                      maxlength="2000"
                                      oninput="onDescInput(this)"></textarea>
                            <div class="d-flex justify-content-between">
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <span class="char-counter"><span id="descCount">0</span>/2000</span>
                            </div>
                            <p class="form-hint"><i class="bi bi-info-circle me-1"></i>En az 80 karakter önerilir.</p>
                        </div>

                    </div>
                </div>

                <!-- 2. Detay & Fiyat -->
                <div class="card-panel">
                    <div class="card-panel-header">
                        <div class="card-panel-icon"><i class="bi bi-sliders"></i></div>
                        <div>
                            <div class="card-panel-title">Tur Detayları</div>
                            <div class="card-panel-sub">Süre, kapasite ve fiyat bilgilerini belirleyin</div>
                        </div>
                    </div>
                    <div class="card-panel-body">
                        <div class="row g-4">

                            <!-- DayCount -->
                            <div class="col-sm-4">
                                <label asp-for="DayCount" class="form-label">
                                    Tur Süresi (Gün) <span class="req">*</span>
                                </label>
                                <div class="spinner-group">
                                    <button type="button" class="spinner-btn"
                                            onclick="spinField('DayCount', -1)">
                                        &#8722;
                                    </button>
                                    <input asp-for="DayCount"
                                           type="number"
                                           class="spinner-input"
                                           min="1" max="365"
                                           oninput="updateSummary()" />
                                    <button type="button" class="spinner-btn"
                                            onclick="spinField('DayCount', 1)">
                                        &#43;
                                    </button>
                                </div>
                                <span asp-validation-for="DayCount" class="text-danger"></span>
                                <p class="form-hint">1 – 365 gün</p>
                            </div>

                            <!-- Capacity -->
                            <div class="col-sm-4">
                                <label asp-for="CapCity" class="form-label">
                                    Maksimum Kapasite <span class="req">*</span>
                                </label>
                                <div class="spinner-group">
                                    <button type="button" class="spinner-btn"
                                            onclick="spinField('Capacity', -1)">
                                        &#8722;
                                    </button>
                                    <input asp-for="CapCity"
                                           type="number"
                                           class="spinner-input"
                                           min="1" max="500"
                                           oninput="updateSummary()" />
                                    <button type="button" class="spinner-btn"
                                            onclick="spinField('Capacity', 1)">
                                        &#43;
                                    </button>
                                </div>
                                <span asp-validation-for="CapCity" class="text-danger"></span>
                                <p class="form-hint">1 – 500 kişi</p>
                            </div>

                            <!-- Price -->
                            <div class="col-sm-4">
                                <label asp-for="Price" class="form-label">
                                    Kişi Başı Fiyat (₺) <span class="req">*</span>
                                </label>
                                <div class="price-wrap">
                                    <span class="price-currency">₺</span>
                                    <input asp-for="Price"
                                           type="number"
                                           class="form-control"
                                           placeholder="0,00"
                                           min="0" step="0.01"
                                           oninput="updateSummary()" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                                <p class="form-hint">KDV dahil fiyat</p>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- 3. Kapak Görseli -->
                <div class="card-panel">
                    <div class="card-panel-header">
                        <div class="card-panel-icon"><i class="bi bi-image"></i></div>
                        <div>
                            <div class="card-panel-title">Kapak Görseli</div>
                            <div class="card-panel-sub">Görsel URL'sini girin veya dosya yükleyin</div>
                        </div>
                    </div>
                    <div class="card-panel-body">

                        <div class="mb-3">
                            <label asp-for="CoverImageUrl" class="form-label">Görsel URL'si</label>
                            <div class="input-icon-wrap">
                                <i class="bi bi-link-45deg input-icon"></i>
                                <input asp-for="CoverImageUrl"
                                       type="url"
                                       class="form-control"
                                       placeholder="https://example.com/gorsel.jpg"
                                       oninput="previewFromUrl(this.value)" />
                            </div>
                            <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                        </div>

                        <div id="urlPreview">
                            <img id="previewImg" src="" alt="Kapak Görseli Önizleme">
                            <button type="button" id="removeImgBtn" onclick="removeImage()">
                                <i class="bi bi-x"></i>
                            </button>
                        </div>

                        <div class="d-flex align-items-center gap-3 my-3">
                            <hr class="flex-grow-1 m-0">
                            <span style="font-size:.75rem;color:#9fb5c8;white-space:nowrap">veya dosya yükle</span>
                            <hr class="flex-grow-1 m-0">
                        </div>

                        <div class="upload-zone">
                            <input type="file" accept="image/*" onchange="handleFileUpload(event)">
                            <div class="upload-icon"><i class="bi bi-cloud-arrow-up"></i></div>
                            <strong>Görsel Seçin veya Sürükleyin</strong>
                            <p>PNG, JPG, WEBP — Maks. 5 MB</p>
                        </div>

                    </div>
                </div>

                <!-- 4. Rozet & Durum -->
                <div class="card-panel">
                    <div class="card-panel-header">
                        <div class="card-panel-icon"><i class="bi bi-tags"></i></div>
                        <div>
                            <div class="card-panel-title">Rozet & Yayın Durumu</div>
                            <div class="card-panel-sub">Turun etiketini ve görünürlüğünü belirleyin</div>
                        </div>
                    </div>
                    <div class="card-panel-body">

                        <label class="form-label mb-2">Rozet Seçin</label>
                        <input asp-for="Badge" type="hidden" id="badgeHidden" />
                        <div class="badge-options mb-4">
                            <span class="badge-chip sel-default" data-val="Öne Çıkan" onclick="selectBadge(this)">🌟 Öne Çıkan</span>
                            <span class="badge-chip sel-accent" data-val="Fırsat" onclick="selectBadge(this)">🔥 Fırsat</span>
                            <span class="badge-chip sel-green" data-val="Yeni" onclick="selectBadge(this)">✨ Yeni</span>
                            <span class="badge-chip sel-dark" data-val="Çok Satan" onclick="selectBadge(this)">🏆 Çok Satan</span>
                            <span class="badge-chip sel-red" data-val="Son Kontenjan" onclick="selectBadge(this)">⏳ Son Kontenjan</span>
                            <span class="badge-chip sel-none" data-val="" onclick="selectBadge(this)">🚫 Rozet Yok</span>
                        </div>

                        <label class="form-label mb-2">Yayın Durumu</label>
                        <div class="toggle-wrap">
                            <div>
                                <div class="toggle-label">Tur Yayında mı?</div>
                                <div class="toggle-sub" id="statusSubText">
                                    Tur aktif — kullanıcılar listeyi görebilir
                                </div>
                            </div>
                            <div class="form-check form-switch mb-0">
                                <input asp-for="IsStatus"
                                       class="form-check-input"
                                       type="checkbox"
                                       role="switch"
                                       onchange="onStatusChange(this)" />
                            </div>
                        </div>
                        <span asp-validation-for="IsStatus" class="text-danger"></span>

                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex gap-3 flex-wrap pb-4">
                    <button type="submit" class="btn-accent" id="submitBtn">
                        <i class="bi bi-check-circle"></i> Turu Oluştur
                    </button>
                    <a asp-action="TourList" class="btn-outline">
                        <i class="bi bi-x-circle"></i> İptal
                    </a>
                </div>

            </div><!-- /col-xl-8 -->
            <!-- ══ RIGHT: SUMMARY ══ -->
            <div class="col-xl-4 col-lg-5">

                <!-- Canlı Özet -->
                <div class="summary-card">
                    <h6>Canlı Özet</h6>
                    <div class="preview-img-wrap" id="sumImgWrap">
                        <span id="sumImgPlaceholder">
                            <i class="bi bi-image" style="font-size:1.6rem;display:block;margin-bottom:4px"></i>
                            Kapak görseli bekleniyor
                        </span>
                        <img id="sumImg" src="" alt="" style="display:none">
                    </div>
                    <div class="sum-row">
                        <span class="lbl">Başlık</span>
                        <span class="val" id="sumTitle">—</span>
                    </div>
                    <div class="sum-row">
                        <span class="lbl">Süre</span>
                        <span class="val" id="sumDay">—</span>
                    </div>
                    <div class="sum-row">
                        <span class="lbl">Kapasite</span>
                        <span class="val" id="sumCap">—</span>
                    </div>
                    <div class="sum-row">
                        <span class="lbl">Rozet</span>
                        <span class="val" id="sumBadge">—</span>
                    </div>
                    <div class="sum-row">
                        <span class="lbl">Durum</span>
                        <span class="val" id="sumStatus" style="color:#4ade80">● Yayında</span>
                    </div>
                    <div class="sum-divider"></div>
                    <div class="sum-row">
                        <span class="lbl" style="font-size:.85rem">Kişi Başı Fiyat</span>
                        <span class="sum-price" id="sumPrice">—</span>
                    </div>
                </div>

                <!-- Zorunlu Alan Kontrolü -->
                <div class="card-panel">
                    <div class="card-panel-header">
                        <div class="card-panel-icon" style="background:#edfbf1;color:#198754">
                            <i class="bi bi-check2-all"></i>
                        </div>
                        <div>
                            <div class="card-panel-title">Form Kontrolü</div>
                            <div class="card-panel-sub">Zorunlu alanların durumu</div>
                        </div>
                    </div>
                    <div class="card-panel-body" id="fieldChecks"></div>
                </div>

                <!-- İpuçları -->
                <div class="card-panel">
                    <div class="card-panel-header">
                        <div class="card-panel-icon" style="background:#fdf3e3;color:var(--accent)">
                            <i class="bi bi-lightbulb"></i>
                        </div>
                        <div>
                            <div class="card-panel-title">İpuçları</div>
                        </div>
                    </div>
                    <div class="card-panel-body pt-2">
                        <ul style="padding-left:18px;font-size:.82rem;color:#475f74;line-height:1.9;margin:0">
                            <li>Başlık en az <strong>20 karakter</strong> olmalıdır.</li>
                            <li>Kapak görseli <strong>16:9 oranında</strong> olmalıdır.</li>
                            <li>Açıklama SEO için önemlidir, detaylı yazın.</li>
                            <li>Fiyatı <strong>₺ (TL)</strong> cinsinden girin.</li>
                            <li>Rozet seçimi isteğe bağlıdır.</li>
                        </ul>
                    </div>
                </div>

            </div><!-- /col-xl-4 -->

        </div><!-- /row -->
    </form>

</div><!-- /page-content -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // ── Init: set char counts from server-side values (edit scenario) ──
        (function init() {
            const t = document.getElementById('Title');
            const d = document.getElementById('Description');
            if (t) document.getElementById('titleCount').textContent = t.value.length;
            if (d) document.getElementById('descCount').textContent  = d.value.length;

            // Sync badge hidden field → select matching chip
            const badgeVal = document.getElementById('badgeHidden').value;
            document.querySelectorAll('.badge-chip').forEach(c => {
                if (c.dataset.val === badgeVal) {
                    c.classList.add('selected');
                }
            });

            // Default badge if none selected
            const anySelected = document.querySelector('.badge-chip.selected');
            if (!anySelected) {
                const first = document.querySelector('.badge-chip');
                if (first) { first.classList.add('selected'); document.getElementById('badgeHidden').value = first.dataset.val; }
            }

            updateSummary();
            updateFieldChecks();
            syncStatusLabel(document.getElementById('IsStatus'));
        })();

        // ── Char counters ──
        function onTitleInput(el) {
            document.getElementById('titleCount').textContent = el.value.length;
            updateSummary();
        }
        function onDescInput(el) {
            document.getElementById('descCount').textContent = el.value.length;
            updateFieldChecks();
        }

        // ── Spinner ──
        function spinField(id, delta) {
            const el = document.getElementById(id);
            if (!el) return;
            const min = parseInt(el.min) || 1;
            const max = parseInt(el.max) || 9999;
            el.value = Math.min(max, Math.max(min, parseInt(el.value || 0) + delta));
            updateSummary();
        }

        // ── Image ──
        function previewFromUrl(url) {
            const wrap = document.getElementById('urlPreview');
            const img  = document.getElementById('previewImg');
            if (url.trim()) {
                img.src = url.trim();
                wrap.style.display = 'block';
                setSummaryImage(url.trim());
            } else {
                wrap.style.display = 'none';
                setSummaryImage('');
            }
            updateFieldChecks();
        }
        function removeImage() {
            document.getElementById('CoverImageUrl').value = '';
            document.getElementById('urlPreview').style.display = 'none';
            setSummaryImage('');
            updateFieldChecks();
        }
        function handleFileUpload(e) {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = ev => {
                const wrap = document.getElementById('urlPreview');
                document.getElementById('previewImg').src = ev.target.result;
                wrap.style.display = 'block';
                // Optionally set URL field with object URL (for display only)
                const objUrl = URL.createObjectURL(file);
                document.getElementById('CoverImageUrl').value = objUrl;
                setSummaryImage(ev.target.result);
                updateFieldChecks();
            };
            reader.readAsDataURL(file);
        }
        function setSummaryImage(src) {
            const si = document.getElementById('sumImg');
            const ph = document.getElementById('sumImgPlaceholder');
            if (src) { si.src = src; si.style.display = 'block'; ph.style.display = 'none'; }
            else      { si.style.display = 'none'; ph.style.display = 'block'; }
        }

        // ── Badge ──
        function selectBadge(el) {
            document.querySelectorAll('.badge-chip').forEach(c => c.classList.remove('selected'));
            el.classList.add('selected');
            document.getElementById('badgeHidden').value = el.dataset.val;
            updateSummary();
        }

        // ── Status ──
        function onStatusChange(el) {
            syncStatusLabel(el);
            updateSummary();
        }
        function syncStatusLabel(el) {
            const on = el && el.checked;
            document.getElementById('statusSubText').textContent = on
                ? 'Tur aktif — kullanıcılar listeyi görebilir'
                : 'Tur pasif — kullanıcılara görünmez';
            const sumSt = document.getElementById('sumStatus');
            sumSt.textContent = on ? '● Yayında' : '○ Pasif';
            sumSt.style.color = on ? '#4ade80' : '#f87171';
        }

        // ── Summary ──
        function updateSummary() {
            const title = (document.getElementById('Title')?.value || '').trim();
            const day   = document.getElementById('DayCount')?.value || 0;
            const cap   = document.getElementById('Capacity')?.value || 0;
            const price = parseFloat(document.getElementById('Price')?.value);
            const badge = document.getElementById('badgeHidden')?.value || '';

            document.getElementById('sumTitle').textContent = title
                ? (title.length > 30 ? title.slice(0, 30) + '…' : title) : '—';
            document.getElementById('sumDay').textContent   = day   ? day   + ' Gün'  : '—';
            document.getElementById('sumCap').textContent   = cap   ? cap   + ' Kişi' : '—';
            document.getElementById('sumBadge').textContent = badge || 'Rozet Yok';
            document.getElementById('sumPrice').textContent = isNaN(price) || price <= 0
                ? '—' : price.toLocaleString('tr-TR', { style:'currency', currency:'TRY', maximumFractionDigits:0 });

            updateFieldChecks();
        }

        // ── Field Checks ──
        function updateFieldChecks() {
            const fields = [
                { lbl:'Başlık',        ok: (document.getElementById('Title')?.value.trim().length || 0) >= 3 },
                { lbl:'Açıklama',      ok: (document.getElementById('Description')?.value.trim().length || 0) >= 10 },
                { lbl:'Kapak Görseli', ok: (document.getElementById('CoverImageUrl')?.value.trim().length || 0) > 5 },
                { lbl:'Gün Sayısı',    ok: parseInt(document.getElementById('DayCount')?.value) >= 1 },
                { lbl:'Kapasite',      ok: parseInt(document.getElementById('Capacity')?.value) >= 1 },
                { lbl:'Fiyat',         ok: parseFloat(document.getElementById('Price')?.value) > 0 },
            ];
            document.getElementById('fieldChecks').innerHTML = fields.map(f =>
                `<div class="field-check-item ${f.ok ? 'ok' : 'nok'}">
                    <i class="bi ${f.ok ? 'bi-check-circle-fill' : 'bi-circle'}" style="font-size:.95rem"></i>
                    ${f.lbl}
                </div>`
            ).join('');
        }

        // ── Submit loading overlay ──
        document.getElementById('createTourForm').addEventListener('submit', function () {
            document.getElementById('loadingOverlay').style.display = 'flex';
        });
    </script>
}
